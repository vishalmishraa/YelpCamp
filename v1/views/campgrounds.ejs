<%- include ("partials/header") %>
    <div class="container">
        <header class="jumbotron">
            <h1>Welcome To YelpCamp</h1>
            <p>View Are hand Piucked campground From All over the world</p>
            <a href="/campgrounds/new" class="btn btn-lg btn-primary">Add New Campgrounds</a>
        </header>

        <div class="row text-center">
            <div class="col-lg-12">
                <h3>our most popular campground page</h3>
            </div>
            <% campgrounds.forEach((campground)=>{%>
                <div class="col-md-4 col-sm-4">
                    <div class="thumbnail">
                        <img src="<%- campground.image %>" alt="">
                        <div class="caption">
                            <h4>
                                <%- campground.name  %>
                            </h4>
                        </div>
                    </div>
                </div>
                <%}); %>
        </div>
    </div>

    <%- include ("partials/footer") %>